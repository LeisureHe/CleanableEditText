<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:paddingEnd="@dimen/edit_text_padding_right"
                android:paddingLeft="@dimen/default_size"
                android:paddingRight="@dimen/edit_text_padding_right"
                android:paddingStart="@dimen/default_size"/>

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/clean_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_cancel"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <TextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_container"
        android:layout_marginLeft="@dimen/error_margin_left"
        android:layout_marginStart="@dimen/error_margin_left"
        android:textColor="?attr/colorAccent"
        android:textSize="@dimen/error_text_size"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>